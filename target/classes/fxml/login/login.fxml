<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0"
            prefWidth="600.0" styleClass="split-pane-divider"
            stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="ph.parcs.rmhometiles.login.LoginController">

    <SplitPane dividerPositions="0.7" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../css/splitpane.css"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="login-background">
            <fx:include source="../dialog/user-warning-dialog.fxml"/>
        </VBox>

        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">

            <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
                <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="137.0"
                      prefWidth="124.0" styleClass="logo" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>

                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>

                </Pane>
                <GridPane alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          vgap="30.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" maxWidth="1.7976931348623157E308"/>
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints valignment="BOTTOM"/>
                        <RowConstraints maxHeight="1.7976931348623157E308"/>
                        <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS"/>
                    </rowConstraints>

                    <JFXButton buttonType="RAISED" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308"
                               onMouseClicked="#login" styleClass="button-signin" text="SIGN IN"
                               textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </JFXButton>

                    <FontAwesomeIconView glyphName="USER" size="1.5em" textAlignment="CENTER" GridPane.columnIndex="1"
                                         GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>

                    <JFXTextField fx:id="tfUserName" labelFloat="true" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" text="ian"
                                  promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <validators>
                            <RequiredFieldValidator message="Please enter a username">
                                <FontAwesomeIconView glyphName="WARNING"/>
                            </RequiredFieldValidator>
                        </validators>
                        <GridPane.margin>
                            <Insets left="20.0"/>
                        </GridPane.margin>
                    </JFXTextField>

                    <FontAwesomeIconView glyphName="KEY" size="1.5em" textOrigin="CENTER" GridPane.columnIndex="1"
                                         GridPane.halignment="LEFT" GridPane.rowIndex="1"/>

                    <JFXPasswordField text="ian" fx:id="pfUserPassword" labelFloat="true" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" promptText="Password" GridPane.columnIndex="1"
                                      GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
                        <validators>
                            <RequiredFieldValidator message="Please enter a password">
                                <FontAwesomeIconView glyphName="WARNING"/>
                            </RequiredFieldValidator>
                        </validators>
                        <GridPane.margin>
                            <Insets left="20.0"/>
                        </GridPane.margin>
                    </JFXPasswordField>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </GridPane>

            </VBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
