<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import de.jensd.fx.glyphs.icons525.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<JFXDrawer xmlns:fx="http://javafx.com/fxml/1" fx:id="drawer" defaultDrawerSize="250" maxHeight="1.7976931348623157E308"
           maxWidth="1.7976931348623157E308" miniDrawerSize="20" prefWidth="250"
           stylesheets="@../../css/navigation.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
           fx:controller="ph.parcs.rmhometiles.navigation.NavigationController">

    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="nav-background">

        <JFXButton fx:id="btnTitle" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="nav-title"
                   text="RM HOME TILES">
            <graphic>
                <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true" VBox.vgrow="ALWAYS">
                    <Image url="@../../image/logo-white.png"/>
                </ImageView>
            </graphic>
        </JFXButton>

        <JFXButton fx:id="btnDashboard" alignment="TOP_LEFT" graphicTextGap="25" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT"
                   styleClass="nav-button" text="Dashboard">
            <graphic>
                <FontAwesomeIconView glyphName="TH_LARGE" size="1.5em" styleClass="nav-icon"/>
            </graphic>
            <padding>
                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
            </padding>
        </JFXButton>

        <JFXButton fx:id="btnInvoice" alignment="TOP_LEFT" graphicTextGap="25" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" styleClass="nav-button"
                   text="Invoice">
            <graphic>
                <FontAwesomeIconView glyphName="MONEY" size="1.5em" styleClass="nav-icon"/>
            </graphic>
            <padding>
                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
            </padding>
        </JFXButton>
        <JFXButton fx:id="btnInventory" alignment="TOP_LEFT" graphicTextGap="25" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" styleClass="nav-button" text="Manage Product">
            <graphic>
                <Icons525View glyphName="ARCHIVE_BOX" size="1.5em" styleClass="nav-icon"/>
            </graphic>
            <padding>
                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
            </padding>
        </JFXButton>

        <JFXButton fx:id="btnCategory" alignment="TOP_LEFT" graphicTextGap="25" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT"
                   styleClass="nav-button" text="Category">
            <graphic>
                <FontAwesomeIconView glyphName="TAGS" size="1.5em" styleClass="nav-icon"/>
            </graphic>
            <padding>
                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
            </padding>
        </JFXButton>

        <JFXButton fx:id="btnSales" alignment="TOP_LEFT" graphicTextGap="25" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT"
                   styleClass="nav-button" text="Sales Report">
            <graphic>
                <FontAwesomeIconView glyphName="BAR_CHART_ALT" size="1.5em" styleClass="nav-icon"/>
            </graphic>
            <padding>
                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
            </padding>
        </JFXButton>

        <JFXButton fx:id="btnSupplier" alignment="TOP_LEFT" graphicTextGap="25" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="nav-button" text="Supplier">
            <graphic>
                <FontAwesomeIconView glyphName="GROUP" size="1.5em" styleClass="nav-icon"/>
            </graphic>
            <padding>
                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
            </padding>
        </JFXButton>

        <JFXButton fx:id="btnLog" alignment="TOP_LEFT" graphicTextGap="25" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="nav-button" text="Log Manager">
            <graphic>
                <FontAwesomeIconView glyphName="CLIPBOARD" size="1.5em" styleClass="nav-icon"/>
            </graphic>
            <padding>
                <Insets bottom="20.0" left="35.0" right="35.0" top="20.0"/>
            </padding>
        </JFXButton>

    </VBox>

</JFXDrawer>
