<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="spMain" stylesheets="@../../css/invoice.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.parcs.rmhometiles.entity.invoice.InvoiceController">

    <fx:include source="../customer/edit-customer.fxml"/>
    <fx:include source="invoice-add-product.fxml" visible="false"/>

    <VBox styleClass="background">

        <HBox styleClass="item-headers">
            <Label maxWidth="1.7976931348623157E308" text="New Invoice" HBox.hgrow="ALWAYS"/>
            <JFXDatePicker fx:id="dpDate" promptText="Invoice Date"  HBox.hgrow="ALWAYS"/>
        </HBox>

        <GridPane>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                <HBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">

                    <JFXComboBox fx:id="cbCustomer" editable="true" labelFloat="true" onAction="#selectCustomer"
                                 promptText="Customer Name" styleClass="detail-customer"/>
                    <JFXTextField fx:id="tfContact" editable="false" labelFloat="true" promptText="Customer Contact"
                                  styleClass="detail-customer"/>
                    <JFXTextField fx:id="tfAddress" editable="false" labelFloat="true" promptText="Customer Address"
                                  styleClass="detail-customer"/>
                    <JFXButton onAction="#showAddCustomer" styleClass="add-button" text="New Costumer"/>
                    <JFXButton onAction="#clearFields" styleClass="add-button" text="Clear"/>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </padding>

                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="15.0">

                    <JFXComboBox fx:id="cbProducts" editable="true" labelFloat="true" onAction="#selectProducts"
                                 promptText="Add Item" styleClass="detail-customer" HBox.hgrow="ALWAYS"/>

                    <JFXButton onAction="#selectProducts" styleClass="add-button" text="Add Product">
                        <graphic>
                            <FontAwesomeIconView styleClass="plus-icon"/>
                        </graphic>
                    </JFXButton>
                </HBox>

                <GridPane.margin>
                    <Insets bottom="20" top="20"/>
                </GridPane.margin>
            </HBox>

            <TableView fx:id="tvInvoice" prefHeight="100" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="tcCode" reorderable="false" text="Product">
                        <cellValueFactory>
                            <PropertyValueFactory property="code"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="tcDescription" reorderable="false" text="Qty">
                        <cellValueFactory>
                            <PropertyValueFactory property="description"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="tcTotal" reorderable="false" text="Total">
                        <cellValueFactory>
                            <PropertyValueFactory property="descriptions"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="tcAction" text="Action"/>
                </columns>
            </TableView>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <padding>
                <Insets left="25.0" right="25.0"/>
            </padding>

        </GridPane>
    </VBox>
</StackPane>
