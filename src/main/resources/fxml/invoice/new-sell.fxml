<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="spMain" stylesheets="@../../css/invoice.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.parcs.rmhometiles.entity.invoice.SellController">

    <fx:include source="../customer/edit-customer.fxml" visible="false"/>

    <VBox styleClass="background">
        <HBox styleClass="item-headers">
            <Label maxWidth="1.7976931348623157E308" text="New Invoice" HBox.hgrow="ALWAYS"/>
            <JFXDatePicker fx:id="dpDate" promptText="Invoice Date"/>
        </HBox>

        <GridPane hgap="20" vgap="15">
            <HBox spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <JFXComboBox fx:id="cbCustomer" onAction="#selectCustomer" editable="true" labelFloat="true"
                             promptText="Name" styleClass="detail-customer"/>
                <JFXTextField fx:id="tfContact" editable="false" labelFloat="true" promptText="Contact"
                              styleClass="detail-customer"/>
                <JFXTextField fx:id="tfAddress" editable="false" labelFloat="true" promptText="Address"
                              styleClass="detail-customer"/>
                <JFXButton styleClass="add-button" onAction="#showAddCustomer" text="New Costumer"/>
                <GridPane.margin>
                    <Insets top="15" bottom="5"/>
                </GridPane.margin>
            </HBox>

            <TableView fx:id="tvItem" maxWidth="1.7976931348623157E308" GridPane.columnIndex="0" GridPane.columnSpan="4"
                       GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="tcCode" reorderable="false" text="Code">
                        <cellValueFactory>
                            <PropertyValueFactory property="code"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="tcDescription" reorderable="false" text="Description">
                        <cellValueFactory>
                            <PropertyValueFactory property="description"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="tcAction" text="Action"/>
                </columns>
            </TableView>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <padding>
                <Insets left="25.0" right="25.0"/>
            </padding>

        </GridPane>


    </VBox>
</StackPane>
