<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:id="spMain"
           fx:controller="ph.parcs.rmhometiles.entity.supplier.SupplierTableController">

    <fx:include source="edit-supplier.fxml" visible="false"/>

    <GridPane styleClass="background" vgap="7.0" hgap="12.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <HBox styleClass="tile-info" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <Label alignment="CENTER" styleClass="big-title" text="Manage Supplier"/>
        </HBox>

        <HBox spacing="10.0" styleClass="tile-default" GridPane.columnIndex="0" GridPane.rowIndex="1">

            <JFXButton styleClass="primary-button">
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="SEARCH_PLUS" size="18"/>
                </graphic>
            </JFXButton>

            <JFXTextField fx:id="tfSearchItem" labelFloat="true" onKeyTyped="#searchItem" promptText="Search Supplier"
                          styleClass="search-field" HBox.hgrow="ALWAYS"/>
            <JFXButton onAction="#showEditItemDialog" styleClass="primary-button" text="Add New">
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="18"/>
                </graphic>
            </JFXButton>
        </HBox>

        <HBox alignment="CENTER" spacing="10" styleClass="tile-default" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Show"/>
            <JFXComboBox fx:id="cbRowCount" onAction="#onPageRowChanged">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="5"/>
                        <String fx:value="10"/>
                        <String fx:value="15"/>
                        <String fx:value="20"/>
                        <String fx:value="30"/>
                        <String fx:value="All"/>
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="5"/>
                </value>
            </JFXComboBox>

            <Label text="entries"/>
        </HBox>

        <TableView fx:id="tvItem" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"
                   GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>

                <TableColumn reorderable="false" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn reorderable="false" text="Contact">
                    <cellValueFactory>
                        <PropertyValueFactory property="contact"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn reorderable="false" text="Address">
                    <cellValueFactory>
                        <PropertyValueFactory property="address"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcAction" reorderable="false"
                             sortable="false" styleClass="action-column" text="Action"/>
            </columns>
        </TableView>

        <BorderPane styleClass="tile" GridPane.columnIndex="0" GridPane.columnSpan="2"
                    GridPane.rowIndex="3">
            <left>
                <Label fx:id="lblPageEntries" BorderPane.alignment="CENTER"/>
            </left>
            <right>
                <Pagination fx:id="pagination" maxPageIndicatorCount="5" BorderPane.alignment="CENTER"/>
            </right>
            <padding>
                <Insets left="15.0" right="15.0"/>
            </padding>
        </BorderPane>
    </GridPane>
</StackPane>
