<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.*?>
<JFXDialog xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../css/edit-dialog.css" fx:id="editDialog"
           fx:controller="ph.parcs.rmhometiles.product.ProductEditController">

    <JFXDialogLayout>
        <heading>
            <HBox>
                <FontAwesomeIconView/>
                <Label fx:id="lblTitle"/>
            </HBox>
        </heading>

        <body>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <JFXTextField fx:id="tfName" labelFloat="true" promptText="Code"
                              GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <tooltip>
                        <Tooltip text="Product name"/>
                    </tooltip>
                    <validators>
                        <RequiredFieldValidator message="Please fill out this field"/>
                    </validators>
                </JFXTextField>

                <JFXTextField fx:id="tfDescription" labelFloat="true" promptText="Description"
                              GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <tooltip>
                        <Tooltip wrapText="true" text="Properties (color,size, etc..)"/>
                    </tooltip>
                    <validators>
                        <RequiredFieldValidator message="Please fill out this field"/>
                    </validators>
                </JFXTextField>

                <JFXTextField fx:id="tfQuantity" promptText="Quantity" labelFloat="true"
                              GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <validators>
                        <NumberValidator message="Please enter number only"/>
                    </validators>
                </JFXTextField>

                <JFXTextField fx:id="tfUnitSold" labelFloat="true" promptText="Unit Sold"
                              GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <validators>
                        <NumberValidator message="Please enter number only"/>
                    </validators>
                </JFXTextField>

                <JFXTextField fx:id="tfDiscount" promptText="Discount" labelFloat="true"
                              GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <validators>
                        <NumberValidator message="Please enter number only"/>
                    </validators>
                </JFXTextField>

                <JFXTextField fx:id="tfPrice" labelFloat="true" promptText="Price"
                              GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <validators>
                        <NumberValidator message="Please enter number only"/>
                    </validators>
                </JFXTextField>

                <JFXComboBox fx:id="cbCategory" onAction="#onCategorySelect" labelFloat="true" promptText="Category"
                             GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                <JFXComboBox fx:id="cbSupplier" onAction="#onSupplierSelect" labelFloat="true" promptText="Supplier"
                             GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>
        </body>

        <actions>
            <JFXButton onAction="#closeDialog" styleClass="button-cancel" text="Cancel"/>
            <JFXButton fx:id="btnSave" styleClass="button-save" text="Save"
                       disable="${tfPrice.text.empty || tfName.text.empty || tfDescription.text.empty}"/>
        </actions>


    </JFXDialogLayout>

</JFXDialog>

