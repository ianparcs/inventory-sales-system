<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="spMain" stylesheets="@../../css/item.css"
           xmlns="http://javafx.com/javafx/10.0.2-internal"
           fx:controller="ph.parcs.rmhometiles.customer.CustomerTableController">

    <fx:include source="edit-customer.fxml" visible="false"/>

    <VBox styleClass="background">

        <Label maxWidth="1.7976931348623157E308" styleClass="item-header" text="Manage Customer"/>

        <GridPane vgap="15" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="ALWAYS"/>
            </columnConstraints>

            <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Show"/>
                <JFXComboBox fx:id="cbRowCount" onAction="#onPageRowChanged" prefWidth="75">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <Integer fx:value="5"/>
                            <Integer fx:value="10"/>
                            <Integer fx:value="15"/>
                            <Integer fx:value="20"/>
                            <Integer fx:value="30"/>
                        </FXCollections>
                    </items>
                    <value>
                        <Integer fx:value="5"/>
                    </value>
                </JFXComboBox>
                <Label text="entries"/>
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <JFXButton onAction="#showAddItemDialog" styleClass="add-button" text="Add Customer">
                    <graphic>
                        <FontAwesomeIconView styleClass="plus-icon"/>
                    </graphic>
                </JFXButton>
                <JFXTextField fx:id="tfSearchItem" onKeyTyped="#searchItem" promptText="Search"/>
            </HBox>

            <TableView fx:id="tvItem" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"
                       GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn maxWidth="70" minWidth="70" resizable="false" styleClass="id-column" text="#">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn reorderable="false" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn reorderable="false" minWidth="200" prefWidth="600" text="Address">
                        <cellValueFactory>
                            <PropertyValueFactory property="address"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn reorderable="false" text="Contact">
                        <cellValueFactory>
                            <PropertyValueFactory property="contact"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="tcAction" maxWidth="120" minWidth="120" reorderable="false" resizable="false"
                                 sortable="false" styleClass="action-column" text="Action"/>
                </columns>
            </TableView>

            <Label fx:id="lblPageEntries" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP"/>
            <Pagination fx:id="pagination" maxPageIndicatorCount="5" minHeight="35.0" maxHeight="35.0" prefHeight="35.0"
                        GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP"/>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>

        </GridPane>
    </VBox>

</StackPane>
