<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.parcs.rmhometiles.login.LoginController" stylesheets="@../../css/login.css">

    <SplitPane dividerPositions="0.7">

        <Pane styleClass="background"/>

        <GridPane>
            <Pane styleClass="logo" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

            <FontAwesomeIconView glyphName="USER" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <JFXTextField fx:id="tfUserName" labelFloat="true" promptText="Username" text="ian" GridPane.columnIndex="1"
                          GridPane.rowIndex="1"/>

            <FontAwesomeIconView glyphName="KEY" size="1.5em" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

            <JFXPasswordField fx:id="pfUserPassword" labelFloat="true" promptText="Password" text="ian"
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <JFXButton maxWidth="1.7976931348623157E308" buttonType="FLAT" onAction="#login" text="SIGN IN"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>

    </SplitPane>
</StackPane>
