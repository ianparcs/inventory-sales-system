<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            prefHeight="600.0"
            prefWidth="800.0" stylesheets="@../../css/edit-dialog.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal">
    <GridPane alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="15.0"
              StackPane.alignment="CENTER">

        <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
            <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="1.7976931348623157E308" vgrow="NEVER"/>
            <RowConstraints maxHeight="1.7976931348623157E308" valignment="CENTER" vgrow="ALWAYS"/>
            <RowConstraints fillHeight="false" maxHeight="1.7976931348623157E308" valignment="CENTER" vgrow="NEVER"/>
        </rowConstraints>

        <Label contentDisplay="CENTER" styleClass="title" text="Product Details" wrapText="true"
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <TableView fx:id="tvInventory" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                   GridPane.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="Code">
                    <cellValueFactory>
                        <PropertyValueFactory property="code"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcDescription" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcCategory" text="Category">
                    <cellValueFactory>
                        <PropertyValueFactory property="category"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcSupplier" text="Supplier">
                    <cellValueFactory>
                        <PropertyValueFactory property="supplier"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcStock" text="Stock">
                    <cellValueFactory>
                        <PropertyValueFactory property="quantity"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcUnitSold" text="Unit Sold">
                    <cellValueFactory>
                        <PropertyValueFactory property="unitSold"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcDiscount" text="Discount">
                    <cellValueFactory>
                        <PropertyValueFactory property="discount"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcPrice" text="Price">
                    <cellValueFactory>
                        <PropertyValueFactory property="price"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tcAction" sortable="false" styleClass="action-column" text="Action"/>

            </columns>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </TableView>

        <HBox alignment="CENTER" fillHeight="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              spacing="10.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER"
              GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
            <JFXButton alignment="BASELINE_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       styleClass="add-button" text="Add Product" textAlignment="CENTER"
                       HBox.hgrow="ALWAYS">
                <graphic>
                    <FontAwesomeIconView glyphName="PLUS" size="1.25em" styleClass="add-button-icon"
                                         textAlignment="CENTER"/>
                </graphic>
            </JFXButton>

            <JFXTextField maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Search"
                          HBox.hgrow="ALWAYS">
            </JFXTextField>
        </HBox>

        <StackPane alignment="TOP_RIGHT" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS"
                   GridPane.rowIndex="2" GridPane.valignment="TOP">
            <Pagination maxHeight="30.0" maxPageIndicatorCount="5" maxWidth="1.7976931348623157E308" minHeight="30.0"
                        pageCount="5" StackPane.alignment="CENTER_LEFT">
            </Pagination>
        </StackPane>

    </GridPane>

</AnchorPane>
